{
  "app-id": "ca._0ldsk00l.Nestopia",
  "runtime": "org.freedesktop.Platform",
  "sdk": "org.freedesktop.Sdk",
  "runtime-version": "23.08",
  "command": "nestopia",
  "rename-desktop-file": "nestopia.desktop",
  "rename-icon": "nestopia",
  "copy-icon": true,
  "finish-args": [
    "--device=all",
    "--socket=x11",
    "--share=ipc",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--filesystem=home:ro"
  ],
  "modules": [
    {
      "name": "libao",
      "cleanup": [
        "/include",
        "*.la",
        "/lib/pkgconfig",
        "/lib/ckport",
        "/share"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "http://downloads.xiph.org/releases/ao/libao-1.2.0.tar.gz",
          "sha256": "03ad231ad1f9d64b52474392d63c31197b0bc7bd416e58b1c10a329a5ed89caf"
        }
      ]
    },
    {
      "name": "fltk",
      "buildsystem": "autotools",
      "cleanup": [
        "/bin",
        "/share/doc/fltk",
        "/share/man",
        "*.a"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://www.fltk.org/pub/fltk/1.3.9/fltk-1.3.9-source.tar.bz2",
          "sha256": "103441134915402808fd45424d4061778609437e804334434e946cfd26b196c2"
        }
      ]
    },
    {
      "name": "nestopia",
      "cleanup": [
        "/share/doc"
      ],
      "config-opts": [
        "--enable-gui",
        "--with-ao"
      ],
      "post-install": [
        "install -Dm644 ca._0ldsk00l.Nestopia.appdata.xml /app/share/appdata/ca._0ldsk00l.Nestopia.appdata.xml"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/0ldsk00l/nestopia/archive/refs/tags/1.52.1.tar.gz",
          "sha512": "600f539e64e71ae732073a9e6781c67e54bd37d3253cf48b77d433396516d6ecf3e519e0f19107aca9dd81b3802b3948d9d242c44956682c988d4630b090273e"
        },
        {
          "type": "file",
          "path": "ca._0ldsk00l.Nestopia.appdata.xml"
        },
        {
          "type": "script",
          "dest-filename": "autogen.sh",
          "commands": [
            "autoreconf -vif"
          ]
        }
      ]
    }
  ]
}
